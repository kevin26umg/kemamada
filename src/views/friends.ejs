<%- contentFor('body') %>
<div class="max-w-3xl mx-auto mt-10">
    <h1 class="text-3xl font-semibold text-gray-800 mb-6 text-center">Mis Amigos</h1>

    <div class="mb-8">
        <h2 class="text-xl font-semibold mb-2">Amigos:</h2>
        <ul class="list-none">
            <% friends.forEach(friend => { %>
                <li class="mb-4 flex items-center p-4 bg-white shadow-md rounded-lg">
                    <div class="flex-shrink-0 mr-4">
                        <img src="<%= friend.friend.profilePicture || '/uploads/default.png' %>" alt="<%= friend.friend.username %>'s profile picture" class="w-10 h-10 rounded-full object-cover">
                    </div>
                    <span class="text-gray-800 font-medium"><%= friend.friend.username %></span>
                </li>
            <% }) %>
        </ul>
    </div>

    <div>
        <h2 class="text-xl font-semibold mb-2">Solicitudes Pendientes:</h2>
        <ul class="list-none">
            <% friendRequests.forEach(request => { %>
                <li class="mb-4 flex items-center p-4 bg-white shadow-md rounded-lg">
                    <div class="flex-shrink-0 mr-4">
                        <img src="<%= request.user.profilePicture || '/uploads/default.png' %>" alt="<%= request.user.username %>'s profile picture" class="w-10 h-10 rounded-full object-cover">
                    </div>
                    <span class="text-gray-800 font-medium"><%= request.user.username %></span>
                    <form action="/friends/accept/<%= request.userId %>" method="POST" class="inline ml-4">
                        <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-bold py-1 px-2 rounded focus:outline-none focus:shadow-outline">Aceptar</button>
                    </form>
                    <form action="/friends/reject/<%= request.userId %>" method="POST" class="inline ml-2">
                        <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-2 rounded focus:outline-none focus:shadow-outline">Rechazar</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
</div>
