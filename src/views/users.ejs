<%- contentFor('body') %>
<div class="max-w-3xl mx-auto mt-10">
    <h1 class="text-3xl font-semibold text-gray-800 mb-6 text-center">Personas</h1>
    <div class="bg-white shadow-md rounded-lg p-6">
        <ul class="list-none">
            <% users.forEach(user => { %>
                <li class="flex justify-between items-center p-4 border-b border-gray-200">
                    <div class="flex items-center">
                        <img src="<%= user.profilePicture || '/uploads/default.png' %>" alt="<%= user.username %>'s profile picture" class="w-10 h-10 rounded-full object-cover mr-4">
                        <span class="text-gray-800 font-medium"><%= user.username %></span>
                    </div>
                    <form action="/friends/request/<%= user.id %>" method="POST" class="inline">
                        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-1 px-3 rounded focus:outline-none focus:shadow-outline">Agregar</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
</div>
